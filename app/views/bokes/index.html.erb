<div class="main odais-index">
  <div class="container">
    <% @bokes.each do |boke| %>
      <div class="bokes-index-item">
        <% @odais.each do |odai| %>
          <% if boke.odai_id == odai.id %>
            <div class="content"><%= odai.content %></div>
            <div class="image"><%= image_tag odai.image_url(:thumb) %></div>
          <% else %>
          <% end %>
        <% end %>
        <!--<%# <%= link_to image_tag(odai.image_url(:thumb)), "/odais/#{odai.id}" %> %>-->
        <div class="image"><%= image_tag boke.image_url(:thumb) %></div>

        <div class="content"><%= link_to(boke.content, "/bokes/#{boke.id}", id: "content-text")%></div>


      </div>
    <% end %>
  </div>
</div>
